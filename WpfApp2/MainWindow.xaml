<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock  Text="Login" Width="300" Margin="5" FontSize="16"/>
            <TextBox x:Name="loginTextBox" Width="300" Margin="10" FontSize="16"/>
            <TextBlock  Text="Password" Width="300" Margin="5" FontSize="16"/>
            <TextBox x:Name="passwordTextBox" Width="300" Margin="10" FontSize="16"/>
            <StackPanel x:Name="regPanel" Visibility="Collapsed">
                <TextBlock  Text="Repit Password" Width="300" Margin="5" FontSize="16"/>
                <TextBox x:Name="password2TextBox" Width="300" Margin="10" FontSize="16"/>
            </StackPanel>
            <Button x:Name="authButton" Content="Войти" Background="White" Width="300" Margin="10" FontSize="16" Click="authButton_Click"/>
            <Button x:Name="regButton" Content="Зарегистрироваться" Background="White" Width="300" Margin="10" FontSize="16" Click="regButton_Click"/>
            <TextBlock x:Name="error" Width="300" Margin="10" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>
